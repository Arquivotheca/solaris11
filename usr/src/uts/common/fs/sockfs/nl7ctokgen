EXIT=0
IFS=","
while [ "$1" != "" ]
do
NAME=$1
shift
<$NAME sort -f +1 |{

while read IDN STR FLG BAD
do
	if [ "$IDN" != "${IDN#\#}" ]
	then
		continue
	fi
	if [ -n "$BAD" ]
	then
		echo "$IDN: ${BAD## }: too many arguments"
		EXIT=1
	fi
	echo "static char S$IDN[] = ${STR## };"
	ELE="$ELE
	INIT($IDN, ${FLG## }),"
	ENU="$ENU
	$IDN,"
done
NAME=${NAME##*nl7c}
NAME=${NAME%.txt}
TOKEN="$TOKEN
token_t $NAME[] = {
$ELE
	{NULL}
};

#define	${NAME}_cnt (sizeof ($NAME) / sizeof (*$NAME))
"
ELE=""

}
done

echo "
enum tokid_e {
	_Hdr_First_,
$ENU
	_Hdr_Last_
};
$TOKEN
"

exit $EXIT
