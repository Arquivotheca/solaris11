#
# We build each flavor in a separate make invocation to improve clarity(!) in
# Makefile.com.  The subordinate makes have $(CURTYPE) set to indicate the
# flavor they're supposed to build.  This causes the correct set of source
# files and compiler and linker flags to be selected.
#
# The SPARC library is built from the closed gate.  This Makefile is shared
# between both environments, so all paths must be absolute.
#

install: $(TYPES:%=install.%)

all: $(TYPES:%=all.%)

$(TYPES:%=all.%):
	@CURTYPE=$(@:all.%=%) $(MAKE) $@.targ

$(TYPES:%=install.%):
	@CURTYPE=$(@:install.%=%) $(MAKE) $@.targ

$(TYPES:%=stubinstall.%):
	@CURTYPE=$(@:stubinstall.%=%) $(MAKE) $@.targ

install.library.targ: stubinstall.library.targ all.library $(INSTALL_DEPS_library)
install.standalone.targ: all.standalone $(INSTALL_DEPS_standalone)

stubinstall: $(TYPES:%=stubinstall.%)

stubinstall.library.targ: $(STUBINSTALL_DEPS_library)
stubinstall.standalone.targ:

all.library.targ: stub.library $(LIBS)
all.standalone.targ: $(STANDLIBRARY)

stub.library: stub
stub.standalong:

lint: $(TYPES:%=lint.%)

$(TYPES:%=lint.%):
	@CURTYPE=$(@:lint.%=%) $(MAKE) lintcheck

# Ensure that library does not contain any unnecessary data
$(STANDLIBRARY) := LDFLAGS += $(ZSTRIPCLASS.rel)

$(STANDLIBRARY): $(OBJS) $(LINKTEST_OBJ)
	$(LD) $(BREDUCE) $(ZDEFS) $(LDFLAGS) -o $@.linktest $(OBJS) \
	    $(LINKTEST_OBJ)
	$(RM) $@.linktest
	$(LD) $(LDFLAGS) -o $@ $(OBJS)

clobber: $(TYPES:%=clobber.%)

$(TYPES:%=clobber.%):
	@CURTYPE=$(@:clobber.%=%) $(MAKE) clobber.targ

clobber.targ: clean
	$(RM) $(CLOBBERTARGFILES)

# include library targets
include $(SRC)/lib/Makefile.targ

$(PICS): pics
$(OBJS): objs

objs/%.o pics/%.o: $(ISASRCDIR)/%.c
	$(COMPILE.c) -o $@ $<
	$(POST_PROCESS_O)

objs/%.o pics/%.o: $(ISASRCDIR)/%.s
	$(COMPILE.s) -o $@ $<
	$(POST_PROCESS_O)

objs/%.o pics/%.o: $(COMDIR)/%.c
	$(COMPILE.c) -o $@ $<
	$(POST_PROCESS_O)

# install rule for lint library target
$(ROOTLINTDIR)/%: $(COMDIR)/%
	$(INS.file)

# install rule for x86 common source
objs/%.o pics/%.o: $(SRC)/common/dis/i386/%.c
	$(COMPILE.c) -o $@ $<
	$(POST_PROCESS_O)
