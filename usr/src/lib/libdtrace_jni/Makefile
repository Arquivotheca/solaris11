include ../Makefile.lib

SUBDIRS = $(MACH) 
$(BUILD64)SUBDIRS += $(MACH64)

all :=		TARGET = all
clean :=	TARGET = clean
clobber :=	TARGET = clobber
install :=	TARGET = install
lint :=		TARGET = lint
stub :=		TARGET = stub
stubinstall :=	TARGET = stubinstall

.KEEP_STATE:

all clean clobber install: java .WAIT $(SUBDIRS)

stub stubinstall: $(SUBDIRS)

lint: $(SUBDIRS)

install_h:

check: $(CHECKHDRS)

java $(SUBDIRS): FRC
	@cd $@; pwd; $(MAKE) $(TARGET)

doc:
	@cd java; pwd; make doc

FRC:

include ../Makefile.targ

#
# Cross-reference customization: build the cross-reference only over the
# source directories, and ignore Makefiles and machine-generated source.
#
XRDIRS = common i386 sparc sparcv9
XRDEL = Makefile*
