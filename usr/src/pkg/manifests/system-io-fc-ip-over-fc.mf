$(MAN_INCLUDE)<include system-io-fc-ip-over-fc.man.p5m>
<include global_zone_only_component>
set name=pkg.fmri value=pkg:/system/io/fc/ip-over-fc@$(PKGVERS)
set name=pkg.description \
    value="Fibre Channel device driver for encapsulating IP (IPv4) and ARP datagrams over Fibre Channel."
set name=pkg.summary value="IP/ARP over Fibre Channel Driver"
set name=info.classification value=org.opensolaris.category.2008:Drivers/Ports
set name=variant.arch value=$(ARCH)
dir path=kernel group=sys
dir path=kernel/drv group=sys
dir path=kernel/drv/$(ARCH64) group=sys
dir path=usr group=sys
driver name=fcip perms="* 0600 root sys"
file path=kernel/drv/$(ARCH64)/fcip group=sys
file path=kernel/drv/fcip.conf group=sys
legacy pkg=SUNWfcip desc="Sun FCIP IP/ARP over FibreChannel Device Driver" \
    name="Sun FCIP IP/ARP over FibreChannel Device Driver"
license cr_Sun license=cr_Sun
license lic_CDDL license=lic_CDDL
