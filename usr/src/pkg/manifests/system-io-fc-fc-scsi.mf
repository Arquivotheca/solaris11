$(MAN_INCLUDE)<include system-io-fc-fc-scsi.man.p5m>
<include global_zone_only_component>
set name=pkg.fmri value=pkg:/system/io/fc/fc-scsi@$(PKGVERS)
set name=pkg.description \
    value="Storage protocol device driver for transporting SCSI-3 commands over Fibre Channel."
set name=pkg.summary value="Fibre Channel Protocol Driver"
set name=info.classification \
    value=org.opensolaris.category.2008:Drivers/Storage
set name=variant.arch value=$(ARCH)
dir path=kernel group=sys
dir path=kernel/drv group=sys
dir path=kernel/drv/$(ARCH64) group=sys
dir path=usr group=sys
driver name=fcp perms="* 0600 root sys"
file path=kernel/drv/$(ARCH64)/fcp group=sys
file path=kernel/drv/fcp.conf group=sys
legacy pkg=SUNWfcp desc="Sun FCP SCSI Fibre Channel Device Driver" \
    name="Sun FCP SCSI Device Driver"
license cr_Sun license=cr_Sun
license lic_CDDL license=lic_CDDL
