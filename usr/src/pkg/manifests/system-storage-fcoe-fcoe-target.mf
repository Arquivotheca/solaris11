$(MAN_INCLUDE)<include system-storage-fcoe-fcoe-target.man.p5m>
<include global_zone_only_component>
set name=pkg.fmri value=pkg:/system/storage/fcoe/fcoe-target@$(PKGVERS)
set name=pkg.description \
    value="SCSI target (COMSTAR) device driver for Fibre Channel over Ethernet."
set name=pkg.summary value="FCoE Target Driver"
set name=info.classification \
    value=org.opensolaris.category.2008:Drivers/Storage
set name=variant.arch value=$(ARCH)
dir path=kernel group=sys
dir path=kernel/drv group=sys
dir path=kernel/drv/$(ARCH64) group=sys
dir path=lib
dir path=lib/svc
dir path=lib/svc/manifest group=sys
dir path=lib/svc/manifest/system group=sys
dir path=lib/svc/method
driver name=fcoet perms="* 0600 root sys"
file path=kernel/drv/$(ARCH64)/fcoet group=sys
file path=lib/svc/manifest/system/fcoe_target.xml group=sys mode=0444
file path=lib/svc/method/svc-fcoet mode=0555
legacy pkg=SUNWfcoet \
    desc="Sun FCoE (Fibre Channel over Ethernet) COMSTAR Driver" \
    name="Sun FCoE COMSTAR Driver"
license cr_Sun license=cr_Sun
license lic_CDDL license=lic_CDDL
