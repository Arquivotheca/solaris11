$(MAN_INCLUDE)<include driver-storage-aac.man.p5m>
<include global_zone_only_component>
set name=pkg.fmri value=pkg:/driver/storage/aac@$(PKGVERS)
set name=pkg.summary value="Adaptec AdvanceRaid Controller SCSI HBA Driver"
set name=info.classification value=org.opensolaris.category.2008:Drivers/Ports
set name=variant.arch value=$(ARCH)
dir path=kernel group=sys
dir path=kernel/drv group=sys
dir path=kernel/drv/$(ARCH64) group=sys
driver name=aac class=scsi \
    alias=pci1028,3 \
    alias=pci1028,a \
    alias=pci9005,285 \
    alias=pci9005,286 \
    alias=pciex9005,285 \
    alias=pciex9005,286
file path=kernel/drv/$(ARCH64)/aac group=sys
file path=kernel/drv/aac.conf group=sys \
    original_name=SUNWaac:kernel/drv/aac.conf
legacy pkg=SUNWaac desc="Adaptec AdvanceRaid Controller SCSI HBA Driver" \
    name="Adaptec AdvanceRaid Controller SCSI HBA Driver"
license cr_Sun license=cr_Sun
license usr/src/uts/common/io/aac/THIRDPARTYLICENSE \
    license=usr/src/uts/common/io/aac/THIRDPARTYLICENSE
