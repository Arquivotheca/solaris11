$mapfile_version 2

LOAD_SEGMENT text {
	FLAGS = READ EXECUTE;
	VADDR = 0x100000;
	ASSIGN_SECTION {
		TYPE = PROGBITS;
		FLAGS = ALLOC !WRITE;
	};
};
 
LOAD_SEGMENT data {
	FLAGS = READ WRITE EXECUTE;
	ALIGN = 0x8;
	ASSIGN_SECTION {
		TYPE = PROGBITS;
		FLAGS = ALLOC WRITE;
	};
	ASSIGN_SECTION {
		TYPE = NOBITS;
		FLAGS = ALLOC WRITE;
	};
 };

NOTE_SEGMENT note {
	ASSIGN_SECTION {
		TYPE = NOTE;
	};
};
