PROG=		picld

MANIFEST=	picl.xml

include ../../Makefile.cmd

ROOTMANIFESTDIR=	$(ROOTSVCSYSTEM)

ROOTLIBPICLD= 		$(ROOTLIB)/picl
ROOTLIBPICLDDAEMON=	$(PROG:%=$(ROOTLIBPICLD)/%)

$(ROOTLIBPICLD) := FILEMODE= 755

CPPFLAGS += -I../../../lib/libpicltree -I../../../lib/libpicl

LDLIBS += -lpicltree

CFLAGS += $(CCVERBOSE)
CPPFLAGS += -D_REENTRANT

LINTFLAGS += -u

.KEEP_STATE:

all: $(PROG)

install: all $(ROOTLIBPICLD) $(ROOTLIBPICLDDAEMON) $(ROOTMANIFEST)

check:	$(CHKMANIFEST)

clean:

lint:	lint_PROG

$(ROOTLIBPICLD):
	$(INS.dir)

$(ROOTLIBPICLD)/%:	%
	$(INS.file)

include ../../Makefile.targ

FRC:
