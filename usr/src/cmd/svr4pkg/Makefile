CMDSUBDIRS=	\
		installf	\
		pkgadd		\
		pkgadm		\
		pkgchk		\
		pkgcond		\
		pkginfo		\
		pkginstall	\
		pkgmk		\
		pkgname		\
		pkgparam	\
		pkgproto	\
		pkgremove	\
		pkgrm		\
		pkgscripts	\
		pkgserv		\
		pkgtrans

.PARALLEL=	$(CMDSUBDIRS)

LIBSUBDIR=	libinst
SUBDIRS=	$(CMDSUBDIRS) $(LIBSUBDIR)

all:=		TARGET= all
install :=	TARGET= install
clean :=	TARGET= clean
clobber:=	TARGET= clobber
_msg :=		TARGET= _msg

.PARALLEL:

.KEEP_STATE:

all clean clobber install _msg: $(SUBDIRS)

$(CMDSUBDIRS): $(LIBSUBDIR)

$(SUBDIRS): FRC
	@cd $@; pwd; $(MAKE) $(TARGET)

FRC:
