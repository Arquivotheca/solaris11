<service_bundle type='manifest' name='SUNWcsd:syseventd'>

<service
	name='system/sysevent'
	type='service'
	version='1'>

	<create_default_instance enabled='true' />

	<single_instance />

	<dependency
	    name='usr'
	    grouping='require_all'
	    restart_on='none'
	    type='service'>
		<service_fmri value='svc:/system/filesystem/minimal' />
	</dependency>

	<dependent
		name='syseventd_single-user'
		grouping='require_all'
		restart_on='none'>
		<service_fmri value='svc:/milestone/single-user' />
	</dependent>

	<!--
		The fmd service exists in all Solaris zones, but only
		in the global zone (which syseventd is defined in) should
		it be dependent on this service.
	-->
	<dependent
		name='syseventd-fmd'
		grouping='require_all'
		restart_on='none'>
		<service_fmri value='svc:/system/fmd' />
	</dependent>

	<exec_method
	    type='method'
	    name='start'
	    exec='/lib/svc/method/svc-syseventd %m'
	    timeout_seconds='60' />

	<exec_method
	    type='method'
	    name='stop'
	    exec='/lib/svc/method/svc-syseventd %m %{restarter/contract}'
	    timeout_seconds='60' />

	<stability value='Unstable' />

	<template>
	    	<common_name>
		    	<loctext xml:lang='C'>
				system event notification
			</loctext>
		</common_name>

		<documentation>
		    	<manpage
			    title='syseventd'
			    section='1M'
			    manpath='/usr/share/man' />
		</documentation>
	</template>
</service>

</service_bundle>
