. /lib/svc/share/smf_include.sh
mode=$1

case "$mode" in
'stop')
	smf_kill_contract $2 TERM
	/usr/lib/zones/zonestatd -c
	exit $SMF_EXIT_OK
	;;
*)
	exit $SMF_EXIT_ERR_FATAL
	;;
esac

exit $SMF_EXIT_ERR_FATAL

