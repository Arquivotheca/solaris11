<service_bundle type='manifest' name='SUNWcsr:kcfd'>

<service
	name='system/cryptosvc'
	type='service'
	version='1'>

	<single_instance />

	<dependency
	  name='fs'
	  grouping='require_all'
	  restart_on='none'
	  type='service'>
		<service_fmri
			value='svc:/system/filesystem/root'/>
	</dependency>

	<dependent
	  name='cryptosvc_single'
	  grouping='optional_all'
	  restart_on='none'>
		<service_fmri
			value='svc:/milestone/single-user'/>
	</dependent>

	<exec_method
		type='method'
		name='start'
		exec='/usr/sbin/cryptoadm %m'
		timeout_seconds='60' />

	<exec_method
		type='method'
		name='stop'
		exec='/usr/sbin/cryptoadm %m'
		timeout_seconds='60' />

	<exec_method
		type='method'
		name='refresh'
		exec='/usr/sbin/cryptoadm %m'
		timeout_seconds='60' />

	<instance name='default' enabled='false' />

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>
			cryptographic services
			</loctext>
		</common_name>
		<documentation>
			<manpage title='cryptoadm' section='1M'
				manpath='/usr/share/man' />
			<manpage title='kcfd' section='1M'
				manpath='/usr/share/man' />
		</documentation>
	</template>

</service>

</service_bundle>
