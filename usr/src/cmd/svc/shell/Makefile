include ../../Makefile.cmd

FILEMODE = 0444

SRCS = \
	fs_include.sh \
	ipf_include.sh \
	net_include.sh \
	net_upgrade_include.sh \
	nwam_include.sh \
	routing_include.sh \
	sendmail_include.sh \
	smf_include.sh \
	mfsthistory

SCRIPTS = $(SRCS:%=$(ROOT)/lib/svc/share/%)

PROG = netservices
$(ROOTUSRSBINPROG) := FILEMODE= 0555

install: all $(SCRIPTS) $(ROOTUSRSBINPROG)

$(ROOT)/lib/svc/share/%: %
	$(INS.file)

all: $(PROG)

lint _msg:

clobber clean:
	$(RM) $(PROG)
