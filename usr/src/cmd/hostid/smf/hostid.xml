<service_bundle type='manifest' name='SUNWcsr:hostid'>

<service
	name='system/hostid'
	type='service'
	version='1'>

	<create_default_instance enabled='true' />

	<single_instance />

	<dependency
		name='usr'
		type='service'
		grouping='require_all'
		restart_on='none'>
		<service_fmri value='svc:/system/filesystem/minimal' />
	</dependency>

	<exec_method
		type='method'
		name='start'
		exec='/lib/svc/method/svc-hostid'
		timeout_seconds='60' />

	<exec_method
		type='method'
		name='stop'
		exec=':true'
		timeout_seconds='60' />

	<property_group name='startd' type='framework'>
		<propval name='duration' type='astring'
			value='transient' />
	</property_group>

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>
				hostid
			</loctext>
		</common_name>

		<documentation>
			<manpage
				title='hostid'
				section='1'
				manpath='/usr/share/man' />
		</documentation>
	</template>
</service>

</service_bundle>
